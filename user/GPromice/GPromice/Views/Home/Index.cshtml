@{
    ViewBag.Title = "Home Page";
}

@*start slider*@

@Styles.Render("~/Content/footercss.css")
@Styles.Render("~/Content/cssstyle.css")
@Styles.Render("~/Content/slickcss.css")
@Styles.Render("~/Content/slicktheme.css")
@Styles.Render("~/Content/nouislider.css")
@Styles.Render("~/Content/bootstrapcss.css")
@Styles.Render("~/Content/navbootstrap.css")
@Styles.Render("~/Content/navbootstrapgrid.css")
<div class="container" style="width:100%;padding-left:-60px;margin-left:-6px">
 
  <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:100%">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" >

      <div class="item active" >
        <img src="~/Content/Images/phone.jpeg" alt="Los Angeles" style="width:100%;">
        <div class="carousel-caption">
            <h3>iphone 6plus</h3>
          
        </div>
      </div>

      <div class="item">
        <img src="~/Content/Images/computer.jpeg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
            <h3>hp laptop</h3>
         
        </div>
      </div>
    
      <div class="item">
        <img src="~/Content/Images/camera.jpeg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
            <h3>sony camera</h3>
         
        </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/Scripts/jsbootstrap.js")
@Scripts.Render("~/Scripts/jquerminnn.js")
@Scripts.Render("~/Scripts/slickmin.js")
@Scripts.Render("~/Scripts/jsmain.js")
@Scripts.Render("~/Scripts/nouislidejs.js")
@Scripts.Render("~/Scripts/jqueryzoom.js")
@*end slider*@



    

























