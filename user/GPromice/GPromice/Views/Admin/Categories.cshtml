@model IEnumerable<GPromice.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<h2>Categories</h2>

<p class="btn btn-info" style="color:white">
    @Html.ActionLink("CreateNewCategory", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDelete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDelete)
        </td>
        <td>
            <span class="btn btn-success"> @Html.ActionLink("EditCategory", "EditCategory", new { id = item.CatID })</span> |
            <span class="btn btn-info">  @Html.ActionLink("DetailsCategory", "DetailsCategory", new { id = item.CatID }) </span>|
            <span class="btn btn-danger">  @Html.ActionLink("DeleteCategory", "DeleteCategory", new { id = item.CatID })</span>
        </td>
    </tr>
}

</table>
